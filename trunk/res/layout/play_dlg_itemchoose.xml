<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/itemchoose_top"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              >
	    <ImageView android:id="@+id/dlitem1image"
	    	android:layout_alignParentLeft="true"
	    	android:layout_alignParentTop="true"
	        android:layout_height="140dip"
	        android:layout_width="140dip"
	        android:layout_margin="5dip"
 		    android:visibility="gone"
	    />
	    <TextView android:id="@+id/dltext1" 
	    		android:text="Tap on item to discard or OK discards last item"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_below="@id/dlitem1image"
	    		android:layout_alignLeft="@id/dlitem1image"
	    		android:visibility="gone"	
	    			/>
	    <ImageView android:id="@+id/dlitem2image"
               android:layout_height="140dip"
               android:layout_width="140dip"
               android:layout_margin="5dip"
               android:layout_toRightOf="@id/dlitem1image"
			   android:layout_alignParentTop="true"
			   android:visibility="gone"
               />
	    <TextView android:id="@+id/dltext2" 
	    		android:text="Tap Item to discard"
	    		android:layout_height="wrap_content"
	    		android:layout_below="@id/dlitem2image"
	    		android:layout_alignLeft="@id/dlitem2image"
	    		android:layout_width="140dip"
	    		android:visibility="gone"	
	    			/>
    	<ImageView android:id="@+id/dlitem3image"
               android:layout_height="140dip"
               android:layout_width="140dip"
               android:layout_margin="5dip"
               android:layout_toRightOf="@id/dlitem2image"
			   android:layout_alignParentTop="true"
			   android:visibility="gone"
               />
	    <TextView android:id="@+id/dltext3" 
	    		android:text="Tap Item to discard"
	    		android:layout_below="@id/dlitem3image"
	    		android:layout_alignLeft="@id/dlitem3image"
	    		android:layout_height="wrap_content"
	    		android:layout_width="140dip"
	    		android:visibility="gone"	
	    			/>
</RelativeLayout>
